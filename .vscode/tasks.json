{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Compile current file",
			"type": "shell",
			"command": "sh",
			"args": [ "./scripts/compile.sh", "${file}" ],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"reveal": "never",
				"panel": "dedicated",
				"clear": true,
				"showReuseMessage": false,
				"echo": false
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Run current file (debug off)",
			"type": "shell",
			"command": "sh",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"clear": true,
				"showReuseMessage": false,
				"echo": false
			},
			"args": [ "./scripts/run.sh", "-f", "${file}" ],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": []
		},
		{
			"label": "Run current file (debug on)",
			"type": "shell",
			"command": "sh",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated",
				"clear": true,
				"showReuseMessage": false,
				"echo": false
			},
			"args": [ "./scripts/run.sh", "-f", "${file}", "-d"],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": []
		}
	]
}
